<button type="button" class="btn btn-primary graph" data-toggle="modal" data-target="#exampleModal"data-id="{{id}}" data-newsleep="{{sleep}}" >
  Start New Day?
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Day</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="quote"></div>

        <p></p>

        <p>
          Starting a new day will reset your Sidekick's status back to 0. Complete Tasks to increase your Sidekick's status and happiness!
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn resetDay" data-dismiss="modal" data-value="0">Start New Day</button>
        <button type="button" class="btn" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>


